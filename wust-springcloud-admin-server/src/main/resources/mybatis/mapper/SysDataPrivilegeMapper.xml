<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wust.springcloud.admin.server.dao.SysDataPrivilegeMapper" >
  	<resultMap id="BaseResultMap" type="SysDataPrivilege" >
		<id column="id" property="id"/>
		<result column="business_name" property="businessName"/>
		<result property="createrId" column="creater_id"/>
		<result property="createrName" column="creater_name"/>
		<result property="createTime" column="create_time"/>
		<result property="modifyId" column="modify_id"/>
		<result property="modifyName" column="modify_name"/>
		<result property="modifyTime" column="modify_time"/>
  	</resultMap>
  
  	<resultMap id="ListResultMap" type="SysDataPrivilegeList" extends="BaseResultMap">
  	</resultMap>
  	


  	<select id="listPage" parameterType="SysDataPrivilegeSearch" resultMap="ListResultMap">
		SELECT
			t.*
		FROM
			sys_data_privilege t
		WHERE
		1 = 1
		<if test="businessName != null and businessName !=  ''">
			AND t.business_name = #{businessName}
		</if>
		ORDER BY t.business_name
  	</select>
  
  	<select id="findByCondition" parameterType="SysDataPrivilegeSearch" resultMap="ListResultMap">
		SELECT
			t.*
		FROM
			sys_data_privilege t
		WHERE
		1 = 1
		<if test="businessName != null and businessName !=  ''">
			AND t.business_name = #{businessName}
		</if>
		ORDER BY t.business_name
  	</select>


	<insert id="batchInsert" parameterType="java.util.List">
		INSERT INTO sys_data_privilege (
			id,
			business_name,
			creater_id,
			creater_name,
			create_time
		)
		VALUES
		<foreach collection="list" index="index" item="item" separator=",">
		(
			#{item.id},
			#{item.businessName},
			#{item.createrId},
			#{item.createrName},
			sysdate()
		)
		</foreach>
	</insert>

	<delete id="deleteAll">
		delete from sys_data_privilege
	</delete>

	<delete id="batchDelete" parameterType="java.util.List">
		<![CDATA[
	       delete from sys_data_privilege where id in
	    ]]>
		<foreach collection="list" item = "id" open="(" separator="," close=")">
			#{id }
		</foreach>
	</delete>
</mapper>